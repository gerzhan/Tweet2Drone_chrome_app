{
  "manifest_version": 2,
  "version": "0.1",
  "name": "Twitter2Drone",
  "description":"A simple app that let's you controll your Parrot AR Drone 2.0 via Twitter.",
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "content_security_policy": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src *;",
  "icons": {"16": "twt2drone-16.png", "128": "twt2drone-128.png"},
  "permissions": [
    "storage",
    "webview",
    {"socket": [
      "udp-bind::5554",
      "udp-send-to::5554",

      "tcp-connect:*:5555",
      "tcp-listen:*:5555",

      "udp-bind::5556",
      "udp-send-to::5556",

      "udp-bind::5559",
      "udp-send-to::5559"]
    },
    "*://*.twitter.com/*",
    "*://*.twimg.com/*"
    ]
}
